<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="service_provider" logger="slf4j"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="zookeeper://localhost:2181" />

    <!-- 当ProtocolConfig和ServiceConfig某属性没有配置时,采用此缺省值 -->

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol serialization="nativejava" name="dubbo" port="20880" >
    </dubbo:protocol>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.iztao.pkuse.rbac.service.GoodsService" ref="goodsService" />
    <dubbo:service retries="0" interface="com.iztao.pkuse.rbac.service.UserService" ref="userService" />

    <!-- 具体的实现bean -->
    <bean id="goodsService" class="com.iztao.pkuse.rbac.service.impl.GoodsServiceImpl" />
</beans>